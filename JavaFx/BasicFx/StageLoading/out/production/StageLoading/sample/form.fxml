<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="tableCont" prefHeight="529.0" prefWidth="266.0" xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.formController">
   <VBox prefHeight="318.0" prefWidth="263.0" spacing="30.0" style="-fx-border-color: white;">
      <padding>
         <Insets left="15.0" right="16.0"/>
      </padding>
      <TextField fx:id="txtname" promptText="Name">
         <VBox.margin>
            <Insets top="52.0"/>
         </VBox.margin>
      </TextField>
      <TextField fx:id="txtaddress" promptText="Address"/>
      <TextField fx:id="txticu" promptText="ICU"/>
      <TextField fx:id="txtoxygen" promptText="Oxygen Storage"/>
      <TextField fx:id="txtcontact" promptText="Contact"/>
      <VBox alignment="CENTER" prefHeight="75.0" prefWidth="246.0" spacing="20.0"/>
   </VBox>
   <Button fx:id="btnadd" alignment="CENTER" layoutX="57.0" layoutY="344.0" mnemonicParsing="false"
           onMousePressed="#clicktoAdd" prefHeight="39.0" prefWidth="150.0" text="ADD Hospital"/>
   <Button fx:id="btnshow" alignment="CENTER" layoutX="58.0" layoutY="410.0" mnemonicParsing="false"
           onAction="#clicktoShow" prefHeight="39.0" prefWidth="150.0" text="Show Table"/>
</Pane>
